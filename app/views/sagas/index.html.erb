<p id="notice"><%= notice %></p>

<h1>Sagas</h1>

<table>
  <thead>
    <tr>
      <th>Immunization Status</th>
      <th>Surgeries</th>
      <th>Underlying Medical Illness</th>
      <th>Allergies</th>
      <th>Sexually Transmitted Diseases</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sagas.each do |saga| %>
      <tr>
        <td><%= saga.ImmunizationStatus %></td>
        <td><%= saga.Surgeries %></td>
        <td><%= saga.UnderlyingMedicalIllness %></td>
        <td><%= saga.Allergies %></td>
        <td><%= saga.SexuallyTransmittedDiseases %></td>

        <td><%= link_to 'Show', profile_saga_path(@profile , saga) %></td>
        <td><%= link_to 'Edit', edit_profile_saga_path(@profile ,saga) %></td>
        <td><%= link_to 'Destroy', profile_saga_path(@profile, saga), data: { confirm: 'Are you sure?' } ,method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Saga', new_profile_saga_path(@profile) %>
